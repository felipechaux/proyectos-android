<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dimen_24"
    android:paddingStart="@dimen/dimen_24"
    android:paddingEnd="@dimen/dimen_24"
    android:paddingBottom="@dimen/dimen_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvObligationsBillType"
        android:text="@string/bbva_obligations_bill_type"
        tools:ignore="MissingConstraints"
        style="@style/Text.Subtitle.Ticket"/>
    <TextView
        android:id="@+id/lblObligationsBillType"
        android:layout_marginStart="12dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toEndOf="@+id/tvObligationsBillType"
        style="@style/Text.Content.Ticket"/>

    <TextView
        android:id="@+id/tvAgreement"
        android:text="@string/bbva_obligations_agreement"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/tvObligationsBillType"
        style="@style/Text.Subtitle.Ticket"/>
    <TextView
        android:id="@+id/lblAgreement"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvObligationsBillType"
        app:layout_constraintStart_toEndOf="@+id/tvAgreement"
        style="@style/Text.Content.Ticket"/>

    <TextView
        android:id="@+id/tvReferenceNumber"
        android:text="@string/bbva_obligations_reference_number"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/tvAgreement"
        style="@style/Text.Subtitle.Ticket" />
    <TextView
        android:id="@+id/lblReferenceNumber"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAgreement"
        app:layout_constraintStart_toEndOf="@+id/tvReferenceNumber"
        style="@style/Text.Content.Ticket"/>

    <TextView
        android:id="@+id/tvTotalBillValue"
        android:text="@string/text_label_total_bill_value"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/tvReferenceNumber"
        style="@style/Text.Subtitle.Ticket"/>
    <TextView
        android:id="@+id/lblTotalBillValue"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvReferenceNumber"
        app:layout_constraintStart_toEndOf="@+id/tvTotalBillValue"
        style="@style/Text.Content.Ticket"/>

</androidx.constraintlayout.widget.ConstraintLayout>