<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dimen_24"
    android:paddingStart="@dimen/dimen_24"
    android:paddingEnd="@dimen/dimen_24"
    android:paddingBottom="@dimen/dimen_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvWithdrawalType"
        android:text="@string/bbva_obligations_bill_type"
        tools:ignore="MissingConstraints"
        style="@style/Text.Subtitle.Ticket"/>

    <TextView
        android:id="@+id/lblWithdrawalType"
        android:layout_marginStart="12dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toEndOf="@+id/tvWithdrawalType"
        style="@style/Text.Content.Ticket"/>

    <TextView
        android:id="@+id/tvWithdrawalAccountNumber"
        android:text="@string/bbva_obligations_agreement"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/tvWithdrawalType"
        style="@style/Text.Subtitle.Ticket"/>
    <TextView
        android:id="@+id/lblWithdrawalAccountNumber"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWithdrawalType"
        app:layout_constraintStart_toEndOf="@+id/tvWithdrawalAccountNumber"
        style="@style/Text.Content.Ticket"/>

    <TextView
        android:id="@+id/tvWithdrawalValue"
        android:text="@string/bbva_obligations_reference_number"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/tvWithdrawalAccountNumber"
        style="@style/Text.Subtitle.Ticket" />
    <TextView
        android:id="@+id/lblWithdrawalValue"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWithdrawalAccountNumber"
        app:layout_constraintStart_toEndOf="@+id/tvWithdrawalValue"
        style="@style/Text.Content.Ticket"/>

</androidx.constraintlayout.widget.ConstraintLayout>