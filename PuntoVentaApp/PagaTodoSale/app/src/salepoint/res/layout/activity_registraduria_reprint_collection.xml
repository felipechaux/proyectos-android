<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="co.com.pagatodo.core.views.registraduria.RegistraduriaReprintCollectionActivity">

    <LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

        <include
			layout="@layout/main_toolbar"
			android:id="@+id/mainToolbar" />

        <LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="@dimen/dimen_24">

            <TextView
				android:id="@+id/lblTitle"
				android:text="@string/home_menu_title_registraduria_collection"
				style="@style/Text.Title5"
				android:layout_marginBottom="@dimen/dimen_24"/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="vertical">

					<TextView
							style="@style/Text.Label"
							android:layout_marginStart="@dimen/dimen_16"
							android:layout_marginTop="@dimen/dimen_8"
							android:layout_marginEnd="@dimen/dimen_16"
							android:text="@string/registraduria_reprint_sale_pin" />

					<EditText
							android:id="@+id/txtSalePin"
							style="@style/StyleEditText"
							android:layout_marginStart="@dimen/dimen_16"
							android:layout_marginTop="@dimen/dimen_8"
							android:layout_marginEnd="@dimen/dimen_8"
							android:layout_weight="1"
							android:hint="@string/registraduria_reprint_sale_pin_placeholder"
							android:inputType="number"
							android:maxLength="12"
							android:paddingStart="@dimen/dimen_16"
							android:paddingEnd="@dimen/dimen_16"
							tools:ignore="Autofill" />

					<TextView
							android:id="@+id/labelErrorSalePin"
							style="@style/Text.Error.Label"
							android:layout_gravity="end"
							android:layout_marginTop="@dimen/dimen_8"
							android:layout_marginEnd="@dimen/dimen_16"
							android:text="@string/registraduria_reprint_sale_pin_placeholder"
							android:visibility="gone" />

				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="vertical">

					<Button
							android:id="@+id/btnRegistraduriaReprintReprint"
							style="@style/StyleConfirmButton"
							android:layout_width="@dimen/dimen_200"
							android:layout_gravity="bottom"
							android:layout_marginTop="@dimen/dimen_35"
							android:layout_marginStart="@dimen/dimen_8"
							android:layout_marginEnd="@dimen/dimen_16"
							android:text="@string/text_btn_reprint" />

				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="vertical"
						android:visibility="invisible">

				</LinearLayout>

			</LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>