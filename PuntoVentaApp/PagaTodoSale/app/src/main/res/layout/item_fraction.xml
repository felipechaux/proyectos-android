<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_8"    >
    <LinearLayout
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dimen_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_weight=".85"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/text_label_number_bet"
                        android:layout_width="@dimen/zero"
                        android:layout_weight=".75"
                        style="@style/Text.Caption3" />
                <TextView
                        android:id="@+id/lblNumberBet"
                        android:text="@string/app_name"
                        android:layout_width="@dimen/zero"
                        android:layout_weight=".65"
                        style="@style/Text.Body.Label" />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/text_label_serie"
                        android:layout_width="@dimen/zero"
                        android:layout_weight=".75"
                        style="@style/Text.Caption3" />
                <TextView
                        android:id="@+id/lblSerie"
                        android:text="@string/app_name"
                        android:layout_width="@dimen/zero"
                        android:layout_weight=".65"
                        style="@style/Text.Body.Label" />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/text_label_fractions_availables"
                        android:layout_width="@dimen/zero"
                        android:layout_weight=".75"
                        style="@style/Text.Caption3" />
                <TextView
                        android:id="@+id/lblFractions"
                        android:text="@string/app_name"
                        android:layout_width="@dimen/zero"
                        android:layout_weight=".65"
                        style="@style/Text.Body.Label" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>