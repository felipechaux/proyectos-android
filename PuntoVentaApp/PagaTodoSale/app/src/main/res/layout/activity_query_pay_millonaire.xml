<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar"
            android:id="@+id/mainToolbar"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dimen_24"
                    android:paddingEnd="@dimen/dimen_24"
                    android:paddingBottom="@dimen/dimen_24">

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_paymillionaire_title_accumulated"
                style="@style/Text.Title5"
                android:layout_marginTop="@dimen/dimen_24"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_paymillionaire_label_1"
                android:layout_marginTop="@dimen/dimen_16"
                style="@style/Text.Title6"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="@string/text_paymillionaire_label_2"/>

            <TextView android:id="@+id/tvAccumulatedModality3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dimen_8"
                android:text=""/>


            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_24"
                android:text="@string/text_paymillionaire_label_3"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_paymillionaire_label_5"
                android:layout_marginTop="@dimen/dimen_30"
                style="@style/Text.Title6"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="@string/text_paymillionaire_label_6"/>

            <TextView android:id="@+id/tvAccumulatedModality4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dimen_8"
                android:text=""/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_24"
                android:text="@string/text_paymillionaire_label_7"/>

        </LinearLayout>

                <include android:id="@+id/footer_buttons"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/dimen_200"
                    layout="@layout/layout_buttons_back_next"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>
