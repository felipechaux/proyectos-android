<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".views.apn.ApnSettingActivity">

    <include layout="@layout/main_toolbar" android:id="@+id/mainToolbar"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
                style="@style/Text.Title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apn_title_page"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginEnd="@dimen/dimen_16"
                android:background="@drawable/txt_background_active"
                android:padding="2dp">
            <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerAPN"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_42"
                    app:ms_arrow_tint="@color/colorRedButton"
                    android:hint="@string/apn_place_holder"
                    app:ms_padding_bottom="@dimen/zero"
                    app:ms_padding_left="@dimen/dimen_8"
                    app:ms_padding_right="@dimen/dimen_8"
                    app:ms_padding_top="@dimen/zero"/>
        </LinearLayout>

       <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dimen_350"/>





    </LinearLayout>

</LinearLayout>